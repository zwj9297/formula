{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext", // 编译目标
    "module": "esnext", // 模块类型
    "moduleResolution": "node",
    "strict": true, // 严格模式
    "esModuleInterop": true,
    "removeComments": false, // 删除注释
    "lib": ["esnext", "dom"], // 导入库类型定义
    "types": ["node"] // 导入指定类型包
    // "experimentalDecorators": true // 启用装饰器
  }
}
